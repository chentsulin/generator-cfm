{
	"name": "<%= moduleName %>",
	"version": "0.1.0",
	"description": "My module",
  "main": "lib/index.js",
	"license": "MIT",
	"repository": "<%= githubUsername %>/<%= moduleName %>",
  "scripts": {
    "clean": "rimraf lib dist coverage",
    "lint": "eslint src test examples",
    "test": "mocha --compilers js:babel/register --recursive",
    "test:watch": "npm test -- --watch",
    "test:cov": "babel-node $(npm bin)/isparta cover $(npm bin)/_mocha -- --recursive",
    "check": "npm run lint && npm run test <% if (flow) { %> && flow check <% } %>",
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack src/index.js dist/<%= moduleName %>.js --config webpack.config.development.js",
    "build:umd:min": "webpack src/index.js dist/<%= moduleName %>.min.js --config webpack.config.production.js",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "preversion": "npm run clean && npm run check",
    "version": "npm run build",
    "postversion": "git push && git push --tags && npm run clean",
    "prepublish": "npm run clean && npm run build"
  },
	"author": {
		"name": "<%= name %>",
		"email": "<%= email %>",
		"url": "<%= humanizedWebsite %>"
	},
	"engines": {
		"node": ">=0.10.0"
	},
	"files": [
    "lib/",
		"index.js"
	],
	"keywords": [
		""
	],
	"devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "^3.5.0",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^5.0.1",
    "eslint-plugin-react": "^3.16.1",
    "isparta": "^4.0.0",
    "mocha": "*",
    "react-addons-test-utils": "^0.14.7",
    "rimraf": "^2.5.2",
    "webpack": "^1.12.13"
	},
  "peerDependencies": {
    "react": "^0.14.7"
  }
}
